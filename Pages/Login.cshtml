@page
@model LoginModel
<link rel="stylesheet" href="~/css/Login.css">


@section Scripts {
    <script src="~/js/Login.js"></script>
}

<div class="container mt-5">
    <h2 class="text-center">Iniciar Sesión</h2>
    <form method="post" class="needs-validation" novalidate>
        <!-- Correo Electrónico -->
        <div class="mb-3">
            <label for="correo" class="form-label">Correo Electrónico</label>
            <input type="email" id="correo" name="correo" class="form-control" placeholder="correo@ejemplo.com" required>
            <div class="invalid-feedback">Por favor, ingresa un correo válido.</div>
        </div>

        <!-- Contraseña -->
        <div class="mb-3">
            <label for="contrasena" class="form-label">Contraseña</label>
            <div class="input-group">
                <input type="password" id="contrasena" name="contrasena" class="form-control" placeholder="Ingresa tu contraseña" required>
                <button type="button" class="btn btn-outline-secondary" id="togglePassword">Mostrar</button>
            </div>
            <div class="invalid-feedback">Por favor, ingresa tu contraseña.</div>
        </div>

        <!-- Botones -->
        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-primary">Iniciar Sesión</button>
           <a asp-page="/Registro" class="btn btn-secondary">Registrarse</a>
        </div>
    </form>
</div>
